<%- include('./includes/head.ejs') %>

  <%- include('./includes/navigation.ejs') %>


    <section class="section opening__section">

      <div class="opening__text">
        <h1 class="opening__title">Segreguj z sensem</h1>
        <h1 class="opening__subtitle">- dla lepszego jutra</h1>
      </div>

      <div alt="picture of earth made from leaves" class="opening__image"></div>

    </section>

    </div>
    <main class="main">

      <section class="section about__section" id="about">

        <div class="about__item">

          <div class="about__item--top">

            <h3 class="about__title">Nasza misja</h3>
            <i class="ph ph-target about__icon"></i>

          </div>

          <div class="about__item--bottom">
            <h6 class="about__subtitle">Pomagamy Ci segregować odpady – dla czystszej planety, zdrowszego życia i
              lepszej
              przyszłości</h6>
          </div>

        </div>

        <div class="about__item">

          <div class="about__item--top">

            <h3 class="about__title">Wyszukiwarka</h3>
            <i class="ph ph-magnifying-glass about__icon"></i>

          </div>

          <div class="about__item--bottom">
            <h6 class="about__subtitle">Dzięki naszej zaawansowanej wyszukiwarce szybko znajdziesz informacje o tym, do
              którego pojemnika należy
              wrzucić dany odpad. Wystarczy wpisać nazwę przedmiotu, a my pokażemy Ci, gdzie powinien trafić.</h6>
          </div>

        </div>

        <div class="about__item">

          <div class="about__item--top">

            <h3 class="about__title">Wskazówki</h3>
            <i class="ph ph-compass about__icon"></i>

          </div>

          <div class="about__item--bottom">
            <h6 class="about__subtitle">Dowiesz się, jak prawidłowo przygotować odpady przed wyrzuceniem. Nasze porady
              pomogą Ci w odpowiednim
              oczyszczeniu i posortowaniu śmieci, co znacznie ułatwi proces recyklingu.</h6>
          </div>

        </div>

        <div class="about__item">

          <div class="about__item--top">

            <h3 class="about__title">Współtworzenie</h3>
            <i class="ph ph-globe-hemisphere-west about__icon"></i>

          </div>

          <div class="about__item--bottom">
            <h6 class="about__subtitle">Twoja wiedza ma znaczenie! Dołącz do współtworzenia naszej bazy wiedzy – razem
              uczmy się i dbajmy o środowisko!</h6>
          </div>

        </div>

      </section>

      <hr class="hr">

      <section class="search__section section" id="search">

        <form class="search__engine" action="/search-results" method="GET">
          <input type="text" class="search__input" placeholder="Wpisz słowa kluczowe" name="searchValue"
            id="searchValue">

          <!-- <h2 class="search__filter">Uwzględnij w wyszukiwaniu</h2> -->
          <div class="search__filter--wrapper">
            <h2 class="search__filter--title">Uwzględnij w wyszukiwaniu</h2>
            <div class="search__checkboxes">
              <div class="search__checkbox--wrapper">
                <label for="itemName" class="search__checkbox--label">Nazwa</label>
                <input type="checkbox" class="search__checkbox--input" id="itemName" name="itemName" checked>
              </div>
              <div class="search__checkbox--wrapper">
                <label for="itemType" class="search__checkbox--label">Typ</label>
                <input type="checkbox" class="search__checkbox--input" id="itemType" name="itemType" checked>
              </div>
              <div class=" search__checkbox--wrapper">
                <label for="itemLocalization" class="search__checkbox--label">Lokalizacja</label>
                <input type="checkbox" class="search__checkbox--input" id="itemLocalization" name="itemLocalization"
                  checked>
              </div>
              <div class="search__checkbox--wrapper">
                <label for="itemTags" class="search__checkbox--label">Tagi</label>
                <input type="checkbox" class="search__checkbox--input" id="itemTags" name="itemTags" checked>
              </div>
              <div class="search__checkbox--wrapper">
                <label for="itemDescription" class="search__checkbox--label">Opis</label>
                <input type="checkbox" class="search__checkbox--input" id="itemDescription" name="itemDescription"
                  checked>
              </div>
            </div>
          </div>


          <button class="search__button button">Wyszukaj!</button>
        </form>

        <div class="search__image"></div>

      </section>

      <hr class="hr">

      <section class="contact__section section" id="contact">

        <h4 class="contact__title">Masz sugestie? Napisz do nas!</h4>

        <div class="contact__wrapper">

          <div class="contact__image"></div>

          <!-- <form action="/api/send-email" method="POST"> -->
          <form action="/send-email" method="POST" class="contact__form" novalidate>

            <textarea name="message" id="" class="contact__item contact__textarea"
              placeholder="Treść wiadomości"></textarea>

            <p class="contact__text">Treść wiadomości musi zawierać minimum 10 znaków</p>
            <input name="subject" type="text" class="contact__item contact__input" placeholder="Temat">
            <p class="contact__text">Temat musi zawierać minimum 5 znaków</p>
            <input name="email" type="email" class="contact__item contact__input" placeholder="Mail">
            <p class="contact__text">Wpisz poprawny format maila</p>
            <button class="contact__button button" type="submit">Wyślij</button>

          </form>

        </div>

      </section>

    </main>

    <%- include('./includes/footer.ejs') %>